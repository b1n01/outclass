{
  "name": "outclass",
  "version": "0.1.0",
  "description": "A CSS class string manipulation tool",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "type": "module",
  "files": [
    "lib"
  ],
  "scripts": {
    "dev": "jest --watch",
    "build:clean": "rm -rf lib/*",
    "build:esm": "tsc -p tsconfig.esm.json && mv lib/esm/index.js lib/esm/index.mjs",
    "build:cjs": "tsc -p tsconfig.cjs.json && mv lib/cjs/index.js lib/cjs/index.cjs",
    "build": "npm run build:clean && npm run build:cjs && npm run build:esm",
    "test": "jest"
  },
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "import": "./lib/esm/index.mjs",
      "require": "./lib/cjs/index.cjs"
    }
  },
  "keywords": [
    "class",
    "className",
    "atomic css",
    "utility-first css"
  ],
  "author": "b1n01",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.2",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.4"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageReporters": [
      "text"
    ]
  }
}
